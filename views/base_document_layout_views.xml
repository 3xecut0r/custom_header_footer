<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_base_document_layout_inherit" model="ir.ui.view">
            <field name="name">Document Layout Inherit</field>
            <field name="model">base.document.layout</field>
            <field name="inherit_id" ref="web.view_base_document_layout"/>
            <field name="arch" type="xml">
                <field name="paperformat_id" position="after">
                    <field name="header_image" string="Header Image" widget="image" options="{'size': [0, 50]}"/>
                    <field name="footer_image" string="Footer Image" widget="image" options="{'size': [0, 50]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
